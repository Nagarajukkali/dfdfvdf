{
  "src": [
    "tests/**/*.js",
    "tests/**/*.feature"
  ],
  "browsers": [
    "chrome:headless"
  ],
  "concurrency": 4,
  "reporter": [{
      "name": "spec"
    }, {
      "name": "html",
      "output": "results/report/ctpe2e-report.html"
    }, {
      "name": "xunit",
      "output": "results/report/ctpe2e-report.xml"
    }
  ],
  "screenshotPath": "results/screenshots",
  "screenshotPathPattern": "${USERAGENT}/test-${TEST_INDEX}/${DATE}_${TIME}.png",
  "takeScreenshotsOnFails": true,
  "pageLoadTimeout": 5000,
  "skip-js-errors": true,
  "color": true,
  "proxyBypass": [
    "localhost:4302"
  ],
  "speed": 1
}
