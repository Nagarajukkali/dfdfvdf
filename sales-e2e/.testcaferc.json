{
  "src": [
    "tests/**/*.js",
    "tests/**/*.feature"
  ],
  "browsers": [
    "chrome"
  ],
  "concurrency": 1,
  "reporter": [{
      "name": "spec"
    }, {
      "name": "cucumber-json",
      "output": "results/report/report.json"
    }
  ],
  "screenshotPath": "results/screenshots",
  "screenshotPathPattern": "${USERAGENT}/test-${TEST_INDEX}/${DATE}_${TIME}.png",
  "takeScreenshotsOnFails": true,
  "pageLoadTimeout": 5000,
  "skip-js-errors": true,
  "color": true,
  "proxy": "proxy.ealan.shinesolutions.com:3128",
  "proxyBypass": [
    "localhost:4302"
  ],
  "speed": 1
}
