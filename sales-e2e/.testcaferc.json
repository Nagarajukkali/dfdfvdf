{
  "src": [
    "tests/**/*.ts",
    "tests/**/*.feature"
  ],
  "browsers": [
    "chrome:headless --allow-insecure-localhost"
  ],
  "concurrency": 5,
  "reporter": [
    {
      "name": "cucumber-json"
    }
  ],
  "screenshots": {
    "path": "screenshots",
    "pathPattern": "${FIXTURE}/${TEST}/${BROWSER}/screenshot_${FILE_INDEX}.png",
    "takeOnFails": true,
    "fullPage": true
  },
  "fullPage": true,
  "debugMode": false,
  "debugOnFail": false,
  "skip-uncaught-errors": false,
  "pageLoadTimeout": 5000,
  "selectorTimeout": 5000,
  "skipJsErrors": true,
  "quarantineMode": false,
  "color": true,
  "proxy": "proxy.ealan.shinesolutions.com:3128",
  "proxyBypass": [
    "localhost:4302"
  ],
  "speed": 1,
  "hostname": "localhost"
}
